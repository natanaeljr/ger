cmake_minimum_required(VERSION 3.0)

list(APPEND CMAKE_MODULE_PATH "${CMAKE_CURRENT_SOURCE_DIR}/Modules")

find_package(LibSSH REQUIRED)

include(cmake/GSL.cmake.in)
include(cmake/FMT.cmake.in)
include(cmake/Abseil.cmake.in)
include(cmake/GTest.cmake.in)

include_directories(
  ${LIBSSH_INCLUDE_DIRS}
  ${GSL_INCLUDE_DIRS}
  ${FMT_INCLUDE_DIRS}
  ${ABSEIL_INCLUDE_DIRS}
  ${GTEST_INCLUDE_DIRS}
)

link_directories(
  ${CMAKE_BINARY_DIR}/lib
  ${CMAKE_BINARY_DIR}/lib64
)